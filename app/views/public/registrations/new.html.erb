<center>

<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :（姓） %><br />
    <%#= f.last_name_field :last_name, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :（名） %><br />
    <%#= f.first_name_field :first_name, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>（<%= @minimum_password_length %>文字以上）</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用）%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit "新規登録",class:"btn btn-success" %>
  </div>
<% end %>

<p>既に登録済みの方</p>

<p><%= render "public/shared/links" %>からログインしてください。</p>

</center>