<div class = "container px-5 px-sm-0">
  <div class = "row">




    <h4>ショッピングカート</h4>


    <br>


    <%#= image_tag @item.image, width:150,height:150 %>

    </div>


      <div class = "col">



        <table class = "table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品名</th>
              <th>価格</th>
              <th>数量</th>
              <th>小計</th>
              <th colspan="1"></th>
            </tr>
          </thead>

          <tbody>

            <% @items.each do |item| %>

            <tr>

              <td><%= item.name %></td>

              <td><%= item.price %></td>

              <td><%#= cart_item.amount %></td>

              <td><%#=         %></td>

              <td><%#= link_to "削除する",book_path(@book.id), class:"btn btn-danger", method: :delete,
              "data-confirm" => "本当に消しますか？" %></td>

            </tr>

            <% end %>

          </tbody>
        </table>


        </div>
      </div>
    </div>
  </div>
</div>
