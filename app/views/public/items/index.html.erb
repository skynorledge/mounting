<div class = "container">

  <div class = "row mt-3 mb-3">
    <div class = "col">
      <h4>商品一覧</h4>
    </div>
  </div>


    <div class = "row mt-3 mb-3">

      <% @items.each do |item| %>

        <div class = "col-md-3">

          <table class = "table table-borderless">
            <thead>
              <tr>
                <th colspan="1"></th>
              </tr>
            </thead>

            <tbody>

              <tr>

                <td><%= image_tag item.image, width:150,height:150 %><br>
                <%= link_to item.name,public_item_path(item.id) %><br>
                <%= item.price %></td>

              </tr>

             </tbody>
          </table>

        </div>

      <% end %>

    </div>

</div>
