<div class = "container">

  <div class = "row mt-3 mb-3">
    <h4 class = "bg-success">配送先登録/一覧</h4>
  </div>

    <%= form_with model: @delivery, url: '/deliveries', method: :post do |f| %>

      <table class = "table table-borderless">

       <tr><th><%= f.label :郵便番号 %></th><td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td></tr>

       <tr><th><%= f.label :住所 %></th><td><%= f.text_field :address, autocomplete: "address", size: "70×35" %></td></tr>

       <tr><th><%= f.label :宛名 %></th><td><%= f.text_field :name, autocomplete: "name" %>
       &emsp;&emsp;&emsp;&emsp;
       <%= f.submit '新規登録' ,class:"btn btn-success btn-sm" %></td></tr>


      </table>

    <% end %>

    <%# if customer_signed_in? && current_customer %><%# if @deliveries.customer == current_customer %>

      <div class = "row mt-3 mb-3">

        <table class = "table table-bordered">
          <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th colspan="1"></th>
            </tr>
          </thead>

          <tbody>

            <% @deliveries.each do |delivery| %>

            <tr>
              <td><%= delivery.postal_code %></td>

              <td><%= delivery.address %></td>

              <td><%= delivery.name %></td>

              <td><%= link_to "編集する",edit_delivery_path(delivery.id), class:"btn btn-success btn-sm" %>&emsp;
              <%= link_to "削除する",delivery_path(delivery.id), class:"btn btn-danger btn-sm",method: :delete,"data-confirm" => "本当に消しますか？" %></td>


            </tr>

            <% end %>

    <%# end %>

          </tbody>
        </table>
      </div>

</div>
