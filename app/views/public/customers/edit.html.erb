<div class = "container">

  <div class = "row mt-3 mb-3">

    <h4 class = "bg-info">会員情報編集</h4>

  </div>

    <div class = "row mt-3 mb-3">

    <%= form_with model: @customer,url:customer_path(current_customer),method: :PATCH do |f| %>

    <table class = "table">

      <tr><th><%= f.label :氏名 %></th><td><%= f.text_field :last_name, autocomplete: "last_name" %>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<%= f.text_field :first_name, autocomplete: "first_name" %></td></tr>

      <tr><th><%= f.label :フリガナ %></th><td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %></td></tr>

      <tr><th><%= f.label :メールアドレス %></th><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td></tr>

      <tr><th><%= f.label :郵便番号 %></th><td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td></tr>

      <tr><th> <%= f.label :住所 %></th><td><%= f.text_field :address, autocomplete: "address",size: "70×35" %></td></tr>

      <tr><th><%= f.label :電話番号 %></th><td><%= f.text_field :telephone_number, autocomplete: "telephone_number" %></td></tr>


    </table>

    </div>

    <div class = "row mt-3 mb-3">
      <div class = col-md-6>
        <%= f.submit '編集内容を保存' ,class:"btn btn-success btn-sm" %>
      </div>
    <!--&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;-->
      <div class = col-md-4>
        <%= link_to "退会する",customers_confirm_path(current_customer), class:"btn btn-danger btn-sm" %>
      </div>

    <% end %>

  </div>
