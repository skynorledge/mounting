<div class = "container">

  <div class = "row mt-3 mb-3">
    <div class = "col-md-1"></div>
    <div class = "col-md-2"><h5>マイページ</h5></div>
    <div class = "col-md-3"></div>
  </div>


    <div class = "row mt-3 mb-3">
      <div class = "col-md-2">
        <h5 class="font-weight-bold">登録情報</h5>
      </div>
      <div class = "col-md-10">
        <div><%= link_to "編集する",customers_info_edit_path(current_customer), class:"btn btn-success btn-sm" %></div>
      </div>
    </div>

    <div class = "row mt-3 mb-3">

      <div class = "col-md-8">

        <table class = "table table-bordered">

          <tr><th scope="col" style="width: 20%"class = "table-secondary">氏名</th><td><%= @customer.last_name %>&emsp;<%= @customer.first_name %></td></tr>

          <tr><th class="table-secondary">カナ</th><td><%= @customer.last_name_kana %>&emsp;<%= @customer.first_name_kana %></td></tr>

          <tr><th class="table-secondary">郵便番号</th><td><%= @customer.postal_code %></td></tr>

          <tr><th class="table-secondary">住所</th><td><%= @customer.address %></td></tr>

          <tr><th class="table-secondary">電話番号</th><td><%= @customer.telephone_number %></td></tr>

          <tr><th class="table-secondary">メールアドレス</th><td><%= @customer.email %></td></tr>


        </table>
      </div>

      <div class = "col-md-1"></div>
      <div class = "col-md-1"></div>

    </div>

        <div class = "row mt-3 mb-3">

          <div class = "col-md-2">
            <h5 class="font-weight-bold">配送先</h5>
          </div>
          <div class = "col-md-10">
            <%= link_to "一覧を見る",deliveries_path,class:"btn btn-primary btn-sm" %>
          </div>

        </div>

        <div class = "row mt-3 mb-3">

          <div class = "col-md-2">
            <h5 class="font-weight-bold">注文履歴</h5>
          </div>
          <div class = "col-md-10">
            <%= link_to "一覧を見る",orders_path,class:"btn btn-primary btn-sm" %>
          </div>

        </div>

</div>
