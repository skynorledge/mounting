<center>

  <h4>注文情報入力</h4>

  <br>

    <%= form_with model: @order, url:orders_confirm_path, method: :post do |f| %>

      <h4>支払方法</h4>

      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>

      <br>

      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer] %>

      <br>

      <h4>お届け先</h4>

      <p><%= f.radio_button :select_address,"0" %>
      <%= f.label :address_mine, "ご自身の住所" %>
      <%= current_customer.postal_code %><%= current_customer.address%>
      <%= current_customer.last_name %><%= current_customer.first_name %></p>


      <p>
      <%= f.radio_button :select_address,"1" %>
      <%= f.label :address_done, "登録済住所から選択" %>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %></p>

      <br>

      <p>
      <%= f.radio_button :select_address,"2" %>
      <%= f.label :address_new, "新しいお届け先" %>

      <p>郵便番号
      <%= f.text_field :postal_code %>

      <br>

      <p>住所
      <%= f.text_field :address, size: "70×35" %></p>

      <br>

      <p>宛名
      <%= f.text_field :name %></p>

      </p>

      <br>

      <br>

    <%= f.submit '確認画面へ進む' ,class:"btn btn-primary" %>

    <% end %>

</center>