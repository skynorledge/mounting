<div class = "container">

   <div class = "row mt-3 mb-3">
     <h5>注文履歴一覧</h5>
   </div>

  <%# if @order.customer == current_customer %>

      <div class = "row mt-3 mb-3">

        <table class = "table table-bordered">
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>注文詳細</th>
            </tr>
          </thead>

          <tbody>

            <% @orders.each do |order| %>

            <tr>

              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>

              <td><%= order.address %></td>

              <td>
              <% order.order_items.each do |order_item| %>

              <%= order_item.item.name %><br>

              <% end %></td>

              <td><%= order.total_payment %>円</td>

              <td><%= link_to "表示する",order_path(order.id), class:"btn-primary btn-sm" %></td>

            </tr>

            <% end %>
  <%# end %>

          </tbody>
        </table>
      </div>
</div>