<div class = "container">

  <div class = "row mt-3 mb-3">
    <div class = "col">
      <h4>注文情報確認</h4>
    </div>
  </div>

  <%= form_with model: @order, url:orders_path, method: :post do |f| %>

  <div class = "row mt-3 mb-3">

        <table class = "table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>価格</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>

          <tbody>

            <% @total = 0 %>

            <% @cart_items.each do |cart_item| %>

            <tr>

              <td><%= cart_item.item.name %></td>

              <td><%= cart_item.item.price %></td>

              <td><%= cart_item.amount %></td>

              <td><%= cart_item.item.price * cart_item.amount %></td>

              <% @total +=  (cart_item.item.price) * cart_item.amount %>

            </tr>

            <% end %>

          </tbody>
        </table>


        <table class = "table table-bordered">
          <thead>
            <tr>
              <th>送料</th>
              <th>商品合計</th>
              <th>請求金額</th>
            </tr>
          </thead>

          <tbody>

            <tr>

              <td><%= @order.shipping_cost %></td>

              <td><%= @total %></td>

              <td><%= @total + @order.shipping_cost %></td>

            </tr>

          </tbody>
        </table>

  </div>

  <div class = "row mt-3 mb-3">
          <div class = "col-md-2">
            <h4>支払方法</h4>
          </div>
          <div class = "col-md-10">
            <%= @order.payment_method_i18n %>
          </div>
        </div>

        <div class = "row mt-3 mb-3">
          <div class = "col-md-2">
            <h4>お届け先</h4>
          </div>
          <div class = "col-md-10">
            <%= "〒" %><%= @order.postal_code %><%= @order.address %><br>
            <%= @order.name %>
          </div>
        </div>

        <%= f.hidden_field :postal_code, :value => @order.id %>
        <%= f.hidden_field :address, :value => @order.id %>
        <%= f.hidden_field :name, :value => @order.id %>
        <%= f.hidden_field :shipping_cost, :value => @order.id %>
        <%= f.hidden_field :total_payment, :value => @order.id %>
        <%= f.hidden_field :payment_method, :value => @order.id %>
        <%= f.hidden_field :status, :value => @order.id %>


  <%= f.submit '注文を確定する' ,class:"btn btn-success" %>

  <% end %>


</div>
