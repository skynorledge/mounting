<div class = "container">

  <div class = "row mt-3 mb-3">
    <div class = "col">
      <h4>注文情報確認</h4>
    </div>
  </div>

  <div class = "row mt-3 mb-3">

        <table class = "table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>価格</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>

          <tbody>

            <% @total = 0 %>

            <% @cart_items.each do |cart_item| %>

            <tr>

              <td><%= cart_item.item.name %></td>

              <td><%= cart_item.item.price %></td>

              <td><%= cart_item.amount %></td>

              <td><%= cart_item.item.price %></td>

              <%# @total +=  (cart_item.item.price) * cart_item.amount %>

            </tr>

            <% end %>

          </tbody>
        </table>


        <table class = "table table-bordered">
          <thead>
            <tr>
              <th>送料</th>
              <th>商品合計</th>
              <th>請求金額</th>
            </tr>
          </thead>

          <tbody>

            <tr>

              <td><%= 800 %></td>

              <td><%= @total %></td>

              <td><%= :total_payment %></td>

              <% @total +=  (@cart_item.item.price) * @cart_item.amount + 800 %>

            </tr>

          </tbody>
        </table>

  </div>


</div>
