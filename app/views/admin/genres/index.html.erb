<div class = "container px-5 px-sm-0">
  <div class = "row">


    <div class = "col-md-3">


　　<h4>ジャンル一覧・追加</h4>

　　<%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>

　　<p>ジャンル名
　　<%= f.text_field :name %><%= f.submit '新規登録' ,class:"btn btn-success" %></p>

　　<% end %>

　　<div class = "col-md-8">

        <table class = "table table-hover table-inverse">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th colspan="1"></th>
            </tr>
          </thead>

          <tbody>

          <% @genres.each do |genre| %>

            <tr>
              <td><%= genre.name %></td>

              <td></td>


            </tr>

          <% end %>

          </tbody>
        </table>
    </div>

    </div>
  </div>
</div>