<div class = "container">


  <div class = "row mt-3 mb-3">
　　<h5>ジャンル一覧・追加</h5>
　</div>

  <div class = "row mt-3 mb-3">

　  <!--<table class = "table table-sm table-borderless">-->

　　  <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>

　　    <!--<tr><td>ジャンル名</td><td>-->
　　    <div class = "col-md-8">ジャンル名</div>
　　    <div class = "col-md-2"><%= f.text_field :name %></div>
　　    <div class = "col-md-2"><%= f.submit '新規登録' ,class:"btn btn-success" %></div>

　　  <% end %>

  </div>

　  <!--</table>-->

  <div class = "row mt-3 mb-3">

　　<div class = "col-md-4">

        <table class = "table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th colspan="1"></th>
            </tr>
          </thead>

          <tbody>

          <% @genres.each do |genre| %>

            <tr>
              <td><%= genre.name %></td>

              <td></td>


            </tr>

          <% end %>

          </tbody>
        </table>
    </div>

    <div class = "col-md-4"></div>
    <div class = "col-md-4"></div>

  </div>

</div>