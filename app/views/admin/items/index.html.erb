<div class = "container">

  <div class = "row mt-3 mb-3">
    
    <div class = "col-md-9">
      <h5>商品一覧</h5>
    </div>

    <div class = "col-md-2">
      <%= link_to "新規登録",new_admin_item_path, class:"btn btn-success" %>
    </div>

      <div class = "col-md-1"></div>
  </div>

  <div class = "row mt-3 mb-3">

        <table class = "table">
          <thead>
            <tr class="table-active">
              <th >商品ID</th>
              <th>商品名</th>
              <th>価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>

            <% @items.each do |item| %>

            <tr>
              <td ><%= item.id %></td>

              <td><%= link_to item.name, admin_item_path(item.id)  %></td>

              <td><%= item.price %></td>

              <td><%= item.genre.name %></td>

              <% if item.is_active == true %>

              <td class="text-success"><%= "販売中" %></td>

              <% else %>

              <td class="text-secondary"><%= "販売停止中" %></td>

              <% end %>

            </tr>

            <% end %>

          </tbody>
        </table>


  </div>
</div>