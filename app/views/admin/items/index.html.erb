<div class = "container px-5 px-sm-0">
  <div class = "row">


    <h4>商品一覧</h4>


      <div class = "col">

        <table class = "table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>

            <% @items.each do |item| %>

            <tr>
              <td><%= item.id %></td>

              <td><%= link_to item.name, admin_item_path(item.id)  %></td>

              <td><%= item.price %></td>

              <td><%= item.genre.name %></td>

              <td><%= item.is_active %></td>



            </tr>

            <% end %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
