<div class = "container">
    <div class = "row justify-content-md-center">
      <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">



<h4>商品編集</h4>

<br>

<%= form_with model: @item do |f| %>


  <p>商品画像
      <%= f.file_field :image, accept: "image/*" %></p>

      <br>

      <p>商品名
      <%= f.text_field :name %></p>

      <br>

      <p>商品説明
      <%= f.text_area :introduction,size: "30×30" %></p>

      <br>

      <p>ジャンル
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></p>

      <p>税抜価格
      <%= f.text_field :price %>円</p>

      <br>

      <p>販売ステータス
      <%= f.radio_button :is_active, "now_on_sale" %>
      <%= f.label :is_active_now_on_sale, "販売中" %>

      <%= f.radio_button :is_active, "suspension_of_sales" %>
      <%= f.label :is_active_suspension_of_sales, "販売停止中" %></p>

      <br>

    <%= f.submit '変更を保存' ,class:"btn btn-success" %>

  </div>

<% end %>

  </div>
    </div>
      <div>
