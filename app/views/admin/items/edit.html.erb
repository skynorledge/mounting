<div class = "container">

  <div class = "row mt-3 mb-3 justify-content-md-center">
    <h5>商品編集</h5>
  </div>

  <div class = "row mt-3 mb-3">

    <div class = "col-md-2"></div>

    <div class = "col-md-8">

    <%= form_with model: @item,url:admin_item_path(@item.id),method: :PATCH  do |f| %>

      <table class = "table table-borderless">

        <tr><td>商品画像</td><td>
        <%= f.file_field :image, accept: "image/*" %></td></tr>

        <tr><td>商品名</td><td>
        <%= f.text_field :name %></td></tr>

        <tr><td>商品説明</td><td>
        <%= f.text_area :introduction,size: "30×30" %></td></tr>

        <tr><td>ジャンル</td><td>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td></tr>

        <tr><td>税抜価格</td><td>
        <%= f.text_field :price %>円</td></tr>

        <tr><td>販売ステータス</td><td>
        <%= f.radio_button :is_active,true %>
        <%= f.label :is_active_now_on_sale, "販売中" %>

        <%= f.radio_button :is_active,false %>
        <%= f.label :is_active_suspension_of_sales, "販売停止中" %></td></tr>

       </table>
    </div>

    <div class = "col-md-2"></div>

  </div>

  <div class = "row mt-3 mb-3">

    <div class = "col-md-5"></div>

    <div class = "col-md-6">

      <%= f.submit '変更を保存' ,class:"btn btn-success" %>

    </div>

    <div class = "col-md-2"></div>

    <% end %>

  </div>

</div>
