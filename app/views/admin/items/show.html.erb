<div class = "container px-5 px-sm-0">
  <div class = "row">


    <div class = "col-md-3">



    <h4>商品詳細</h4>


    <br>


    <%= image_tag @item.image, width:150,height:150 %>

    </div>


      <div class = "col-md-8 offset-md-1">



        <table class = "table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品名</th>
              <th>商品説明</th>
              <th>ジャンル</th>
              <th>税抜価格</th>
              <th>販売ステータス</th>
            </tr>
          </thead>

          <tbody>

            <tr>
              <td><%= @item.name %></td>

              <td><%= @item.introduction %></td>

              <td><%= @item.genre.name %></td>

              <td><%= @item.price %></td>

              <% if @item.is_active == true %>

              <td class="text-success"><%= "販売中" %></td>

              <% else %>

              <td class="text-secondary"><%= "販売停止中" %></td>

              <% end %>

            </tr>

          </tbody>
        </table>

        <div><%= link_to "編集する",edit_admin_item_path(@item.id), class:"btn btn-success" %></div>


        </div>
      </div>
    </div>
  </div>
</div>
