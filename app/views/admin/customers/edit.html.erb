<div class = "container">

  <div class = "row mt-3 mb-3">
    <h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h5>
  </div>

  <%= form_with model: @customer,url:admin_customer_path(@customer.id),method: :PATCH  do |f| %>

        <table class = "table table-borderless">

          <tr><td>会員ID</td><td><%= @customer.id %></td></tr>

          <tr><td><%= f.label :氏名 %></td><td><%= f.text_field :last_name, autocomplete: "last_name" %>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<%= f.text_field :first_name, autocomplete: "first_name" %></td></tr>

          <tr><td><%= f.label :フリガナ %></td><td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %></td></tr>

          <tr><td><%= f.label :郵便番号 %></td><td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td></tr>

          <tr><td><%= f.label :住所 %></td><td><%= f.text_field :address, autocomplete: "address",size: "70×35" %></td></tr>

          <tr><td><%= f.label :電話番号 %></td><td><%= f.text_field :telephone_number, autocomplete: "telephone_number" %></td></tr>

          <tr><td><%= f.label :メールアドレス %></td><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td></tr>

          <tr><td>会員ステータス</td><td>
          <%= f.radio_button :is_deleted,false %>
          <%= f.label :is_deleted_active, "有効" %>

          <%= f.radio_button :is_deleted,true %>
          <%= f.label :is_deleted_nil, "退会" %></td>

        </table>

          &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;

          <%= f.submit '変更を保存' ,class:"btn btn-success" %>

  <% end %>

</div>
