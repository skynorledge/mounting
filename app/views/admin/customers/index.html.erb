<div class = "container">

  <div class = "row mt-3 mb-3">
    <div class = "col-md-8">
      <h5>会員一覧</h5>
    </div>
  </div>

  <div class = "row mt-3 mb-3">

        <table class = "table">
          <thead>
            <tr class="table-active">
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>

            <% @customers.each do |customer| %>

            <tr>

              <td><%= customer.id %>
              </td>

              <td><%= link_to admin_customer_path(customer.id), class:'text-black' do %>
              <%= customer.last_name %><%= customer.first_name %>
              <% end %>
              </td>

              <td><%= customer.email %>
              </td>

              <% if customer.is_deleted == true %>

              <td class="text-secondary"><%= "退会" %></td>

              <% else %>

              <td class="text-success"><%= "有効" %></td>

             <% end %>

            </tr>

            <% end %>


          </tbody>
        </table>

  </div>

</div>
