<div class = "container">

  <div class = "row mt-3 mb-3">
    <div class = "col-md-8">
      <h5>会員一覧</h5>
    </div>
  </div>

  <div class = "row mt-3 mb-3">

        <table class = "table table-bordered">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>

            <% @orders.each do |order| %>

            <tr>

              <td><%= link_to admin_order_path(order.id), class:'text-black' do %>
                  <%= order.created_at.strftime('%Y/%m/%d') %>
                  <% end %>
              </td>

              <td><%= order.customer.last_name %><%= order.customer.first_name %>
              </td>

                  <% @total = 0 %>
              <td><% order.order_items.each do |orderitem| %>
                  <% @total += orderitem.quantity %>
                  <% end %>
                  <%= @total %>
              </td>

            </tr>

            <% end %>


          </tbody>
        </table>

  </div>

</div>
