<div class = "container">

  <div class = "row mt-3 mb-3">
    <h5 class = "mark"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h5>
  </div>

        <table class = "table table-borderless">

          <tr><td>会員ID</td><td><%= @customer.id %></td></tr>

          <tr><td>氏名</td><td><%= @customer.last_name %>&emsp;<%= @customer.first_name %></td></tr>

          <tr><td>フリガナ</td><td><%= @customer.last_name_kana %>&emsp;<%= @customer.first_name_kana %></td></tr>

          <tr><td>郵便番号</td><td><%= @customer.postal_code %></td></tr>

          <tr><td>住所</td><td><%= @customer.address %></td></tr>

          <tr><td>電話番号</td><td><%= @customer.telephone_number %></td></tr>

          <tr><td>メールアドレス</td><td><%= @customer.email %></td></tr>

          <tr><td>会員ステータス</td>

          <% if @customer.is_deleted == true %>

              <td class="text-secondary"><%= "退会" %></td>

              <% else %>

              <td class="text-success"><%= "有効" %></td>

          <% end %>

        </table>

        <div class = "row mt-3 mb-3">

          <div class = "col-md-3">

          </div>

          <div class = "col-md-3">
            <%= link_to "編集する",edit_admin_customer_path(), class:"btn btn-success btn-sm" %>
          </div>

          <div class = "col-md-3">
            <%= link_to "注文履歴一覧を見る",admin_root_path,class:"btn btn-primary btn-sm" %>
          </div>
        </div>

</div>
